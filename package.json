{
    "private": true,
    "scripts": {
        "dev": "npx husky install; npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@prettier/plugin-php": "^0.18.4",
        "axios": "^0.21",
        "laravel-mix": "^6.0.6",
        "postcss": "^8.1.14",
        "prettier": "^2.6.2",
        "husky": "^8.0.1"
    },
    "lint-staged": {
        "**/*.php": [
            "sh pre-commit.sh phpstan",
            "sh pre-commit.sh prettify",
            "sh pre-commit.sh blast"
        ],
        "**/*.js": [
            "sh pre-commit.sh prettify"
        ],
        "**/*.vue": [
            "sh pre-commit.sh prettify"
        ],
        "**/*.css": [
            "sh pre-commit.sh prettify"
        ]
    }
}
